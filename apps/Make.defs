# Builtin Registration

BUILTIN_REGISTRY = $(APPDIR)$(DELIM)builtin$(DELIM)registry

DEPCONFIG = $(TOPDIR)$(DELIM).config

ifeq ($(CONFIG_WINDOWS_NATIVE),y)
define REGISTER
	$(Q) echo Register: $1
	$(Q) echo { "$1", $2, $3 }, > "$(BUILTIN_REGISTRY)$(DELIM)$2.bdat"
	$(Q) echo { "$1", $2, $4, $5 }, > "$(BUILTIN_REGISTRY)$(DELIM)$2.mdat";
	$(Q) if [ -z $5 ]; then \
		$(Q) echo { "$1", $2, 100, 1024 }, > "$(BUILTIN_REGISTRY)$(DELIM)$2.mdat"; \
	fi
	$(Q) echo int $2(int argc, char *argv[]); > "$(BUILTIN_REGISTRY)$(DELIM)$2.pdat"
	$(Q) if [ $3 = "TASH_EXECMD_ASYNC" ]; then \
		if [ $5 ]; then \
			echo { "$1", $4, $5 }, > "$(BUILTIN_REGISTRY)$(DELIM)$2.tdat"; \
		fi \
	fi
	$(Q) touch $(BUILTIN_REGISTRY)$(DELIM).updated"
endef
else
define REGISTER
	$(Q) echo "Register: $1"
	$(Q) echo "{ \"$1\", $2, $3 }," > "$(BUILTIN_REGISTRY)$(DELIM)$2.bdat"
	$(Q) echo { \"$1\", $2, $4, $5 }, > "$(BUILTIN_REGISTRY)$(DELIM)$2.mdat"
	$(Q) if [ -z $5 ]; then \
		echo { \"$1\", $2, 100, 1024 }, > "$(BUILTIN_REGISTRY)$(DELIM)$2.mdat"; \
	fi
	$(Q) echo "int $2(int argc, char *argv[]);" > "$(BUILTIN_REGISTRY)$(DELIM)$2.pdat"
	$(Q) if [ $3 = "TASH_EXECMD_ASYNC" ]; then \
		if [ $5 ]; then \
			echo { \"$1\", $4, $5 }, > "$(BUILTIN_REGISTRY)$(DELIM)$2.tdat"; \
		fi \
	fi
	$(Q) touch "$(BUILTIN_REGISTRY)$(DELIM).updated"
endef
endif

# Tools

ifeq ($(CONFIG_WINDOWS_NATIVE),y)
  MKKCONFIG = $(APPDIR)\tools\mkkconfig.bat
else
  MKKCONFIG = $(APPDIR)/tools/mkkconfig.sh
endif
